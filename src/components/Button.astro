---
/**
 * Button.astro
 * Sistema de botones con "Digital Tactility"
 * Inspirado en Apple (física) + Material 3 (semántica)
 *
 * Filosofía: Los botones deben sentirse VIVOS.
 * Reaccionan a la presión, ceden ante el toque, responden con elasticidad.
 */

interface Props {
  variant?: 'primary' | 'secondary' | 'ghost' | 'outline' | 'surface';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  class?: string;
  target?: string;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  type = 'button',
  disabled = false,
  class: className = '',
  target
} = Astro.props;

// Polimorfismo inteligente: ¿Link o Button?
const Tag = href ? 'a' : 'button';

// Props específicas según el tipo
const specificProps = href
  ? { href, target: target || (href.startsWith('http') ? '_blank' : undefined), rel: (target === '_blank' || href.startsWith('http')) ? 'noopener noreferrer' : undefined }
  : { type, disabled };

// Clases combinadas
const classes = `btn btn-${variant} btn-${size} ${className}`.trim();
---

<Tag class={classes} {...specificProps}>
  <slot />
</Tag>


<style>
  /* ================================
     BASE - La Esencia del Botón
     ================================ */

  .btn {
    /* Tipografía */
    font-family: var(--font-body);
    font-weight: 600;
    line-height: 1.2;
    text-decoration: none;
    text-align: center;

    /* Layout */
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;

    /* Pill Shape: Suavidad y Seguridad */
    border-radius: var(--radius-full);
    border: 2px solid transparent;

    /* Cursor */
    cursor: pointer;
    user-select: none;

    /* Física Apple: Snappy Transition */
    transition:
      transform 100ms cubic-bezier(0.4, 0, 0.2, 1),
      background-color 200ms ease,
      border-color 200ms ease,
      color 200ms ease,
      box-shadow 200ms ease;

    /* Prevenir selección de texto */
    -webkit-tap-highlight-color: transparent;

    /* Estado inicial */
    position: relative;
    overflow: hidden;
  }

  /* Área Táctil Generosa (Accesibilidad es Empatía) */
  .btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    min-width: 44px;
    min-height: 44px;
  }


  /* ================================
     TAMAÑOS
     ================================ */

  .btn-sm {
    font-size: 0.875rem;
    padding: 8px 20px;
    min-height: 40px;
  }

  .btn-md {
    font-size: 1rem;
    padding: 12px 28px;
    min-height: 48px; /* Target táctil perfecto */
  }

  .btn-lg {
    font-size: 1.125rem;
    padding: 16px 36px;
    min-height: 56px;
  }


  /* ================================
     VARIANTE: PRIMARY
     Inversión de Color - Fondo Piedra → Lila
     ================================ */

  .btn-primary {
    background-color: var(--color-text); /* #4A3B45 Piedra */
    color: var(--color-surface);         /* #FFF0F5  Crema Surface */
    box-shadow: 0 4px 10px rgba(74, 59, 69, 0.2);
  }

  .btn-primary:hover {
    /* INVERSIÓN: Se vuelve Lila con texto oscuro */
    background-color: var(--color-primary); /* Lila */
    color: var(--color-text);               /* Piedra */
    box-shadow: 0 6px 15px rgba(177, 156, 217, 0.4);
    transform: translateY(-2px);
  }

  .btn-primary:active {
    transform: scale(0.96);
  }


  /* ================================
     VARIANTE: SECONDARY
     Terracota Cálido con Texto Blanco
     ================================ */

  .btn-secondary {
    background-color: var(--color-secondary); /* #D69264 Terracota */
    color: white;
  }

  .btn-secondary:hover {
    background-color: var(--color-secondary-hover);
    box-shadow: 0 4px 12px rgba(214, 146, 100, 0.4);
    transform: translateY(-2px);
  }

  .btn-secondary:active {
    transform: scale(0.96);
  }


  /* ================================
     VARIANTE: GHOST
     El Susurro - Sutil y Respetuoso
     ================================ */

  .btn-ghost {
    background-color: transparent;
    color: var(--color-text);
    border-color: transparent;
  }

  .btn-ghost:hover {
    background-color: rgba(177, 156, 217, 0.08);
    color: var(--color-primary);
  }

  .btn-ghost:active {
    background-color: rgba(177, 156, 217, 0.15);
    transform: scale(0.96);
  }


  /* ================================
     VARIANTE: OUTLINE (Filled)
     Fondo Blanco con Tinte Lila en Hover
     ================================ */

  .btn-outline {
    background-color: white;
    color: var(--color-text);
    border-color: var(--color-text);
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
  }

  .btn-outline:hover {
    background-color: var(--color-primary-container); /* Lila muy suave */
    border-color: var(--color-primary);
    color: var(--color-text);
    box-shadow: 0 4px 10px rgba(177, 156, 217, 0.2);
    transform: translateY(-2px);
  }

  .btn-outline:active {
    transform: scale(0.96);
  }


  /* ================================
     VARIANTE: SURFACE
     El Adaptable - Vive sobre Colores Saturados
     ================================ */

  .btn-surface {
    background-color: white;
    color: var(--color-text);
    border-color: transparent;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .btn-surface:hover {
    background-color: var(--color-surface);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.12);
    transform: translateY(-2px);
  }

  .btn-surface:active {
    transform: scale(0.96);
  }


  /* ================================
     ESTADO: DISABLED
     La Empatía - Visible pero Inaccesible
     ================================ */

  .btn:disabled,
  .btn[disabled] {
    opacity: 0.4;
    cursor: not-allowed;
    pointer-events: none;
    box-shadow: none;
  }


  /* ================================
     FOCUS RING
     El Abrazo para Navegación por Teclado
     ================================ */

  .btn:focus-visible {
    outline: 3px solid var(--color-primary);
    outline-offset: 4px;
    /* No usamos transform aquí para mantener el focus ring estable */
  }

  /* Focus ring para secondary */
  .btn-secondary:focus-visible {
    outline-color: var(--color-secondary);
  }

  /* Focus ring para surface (más visible sobre fondos claros) */
  .btn-surface:focus-visible {
    outline-color: var(--color-text);
  }


  /* ================================
     EFECTO RIPPLE (Opcional - Material Design)
     ================================ */

  .btn::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.4);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
    pointer-events: none;
  }

  .btn:active::after {
    width: 300px;
    height: 300px;
    transition: width 0s, height 0s;
  }


  /* ================================
     ACCESIBILIDAD
     ================================ */

  /* Respetar preferencia de movimiento reducido */
  @media (prefers-reduced-motion: reduce) {
    .btn,
    .btn::after {
      transition-duration: 0.01ms !important;
    }
  }

  /* Alto contraste */
  @media (prefers-contrast: high) {
    .btn {
      border-width: 3px;
    }

    .btn:focus-visible {
      outline-width: 4px;
    }
  }


  /* ================================
     RESPONSIVE - Móvil
     ================================ */

  @media (max-width: 768px) {
    /* En móvil, aumentar área táctil */
    .btn-sm {
      min-height: 44px;
      padding: 10px 20px;
    }

    .btn-md {
      min-height: 48px;
      padding: 14px 28px;
    }

    .btn-lg {
      min-height: 56px;
      padding: 18px 36px;
    }
  }
</style>
