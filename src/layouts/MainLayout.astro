---
/**
 * MainLayout.astro
 * Layout principal del sitio - Usado en todas las páginas
 * Incluye: meta tags, estilos globales, Header y Footer
 */

// Importar componentes
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SchemaOrg from '../components/SchemaOrg.astro';

// Importar estilos globales
import '../styles/global.css';

// Importar schema helpers
import { getOrganizationSchema, getLocalBusinessSchema, getWebSiteSchema, combineSchemas } from '../data/schema-helpers';

// Props que cada página puede personalizar
interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  includeLocalBusiness?: boolean; // Para homepage y contacto
}

// Valores por defecto
const {
  title = "Espacio Ludimente - Psicología Infantil y Adolescente en Mérida",
  description = "Centro de psicología infantil con enfoque TCC en Mérida, Yucatán. Terapia basada en evidencia para niños y adolescentes. Primera sesión disponible.",
  ogImage = "/og-image.jpg",
  includeLocalBusiness = false
} = Astro.props;

// URL del sitio (para meta tags)
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Generar schema apropiado
const isHomepage = Astro.url.pathname === '/';
let schema;

if (isHomepage) {
  // Homepage: Organization + LocalBusiness + WebSite
  schema = combineSchemas(
    getOrganizationSchema(),
    getLocalBusinessSchema(),
    getWebSiteSchema()
  );
} else if (includeLocalBusiness) {
  // Páginas como contacto: Organization + LocalBusiness
  schema = combineSchemas(
    getOrganizationSchema(),
    getLocalBusinessSchema()
  );
} else {
  // Otras páginas: Solo Organization
  schema = getOrganizationSchema();
}
---

<!DOCTYPE html>
<html lang="es">
<head>
  <!-- Charset y viewport -->
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- SEO Básico -->
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="canonical" href={canonicalURL}>

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={ogImage}>

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content={canonicalURL}>
  <meta property="twitter:title" content={title}>
  <meta property="twitter:description" content={description}>
  <meta property="twitter:image" content={ogImage}>

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">

  <!-- Google Fonts - Ya están en global.css, pero por si acaso -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <!-- Generator tag (opcional) -->
  <meta name="generator" content={Astro.generator}>

  <!-- Schema.org structured data -->
  <SchemaOrg schema={schema} />
</head>

<body>
  <!-- Navegación principal -->
  <Header />

  <!-- Contenido principal de cada página -->
  <main>
    <slot />
  </main>

  <!-- Pie de página -->
  <Footer />
</body>
</html>

<style>
  /* Estilos específicos del layout si necesitamos */
  main {
    min-height: calc(100vh - 200px); /* Ajustar cuando tengamos Header y Footer */
  }
</style>
