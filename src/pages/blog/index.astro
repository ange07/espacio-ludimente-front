---
import MainLayout from '../../layouts/MainLayout.astro';
import BlogPostCard from '../../components/BlogPostCard.astro';
import PageHero from '../../components/PageHero.astro';
import { posts } from '../../data/blog-posts';
---

<MainLayout title="Blog - Espacio Ludimente" description="Artículos y recursos sobre psicología infantil, crianza y TCC en Mérida.">
  <PageHero 
    title="Recursos para <em>Familias</em>" 
    subtitle="Artículos, tips y herramientas basadas en evidencia para acompañar el crecimiento de tus hijos."
    variant="centered"
  />

  <section class="container grid grid-auto-fill" style="padding-bottom: var(--spacing-xl);">
    {posts.map(post => (
      <BlogPostCard {...post} />
    ))}
  </section>
</MainLayout>
