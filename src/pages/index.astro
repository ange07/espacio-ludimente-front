<style>
  /* ================================
     SECCIONES GENERALES
     ================================ */

  .section {
    padding: var(--spacing-xl) 0;
  }

  .section-header {
    margin-bottom: var(--spacing-lg);
  }

  .section-header h2 {
    font-family: var(--font-display);
    font-size: var(--text-headline-large);
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: var(--spacing-sm);
  }

  .section-subtitle {
    font-family: var(--font-body);
    font-size: var(--text-body-large);
    color: var(--color-text);
    opacity: 0.7;
    max-width: 700px;
    margin: 0 auto;
  }


  /* ================================
     SERVICIOS
     ================================ */

  .services-section {
    background-color: var(--color-background);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-md);
  }


  /* ================================
     쯇OR QU칄 NOSOTRAS?
     ================================ */

  .why-section {
    background-color: var(--color-surface);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-md);
  }

  .feature-card {
    text-align: center;
    padding: var(--spacing-md);
  }

  .feature-icon {
    font-size: 3rem;
    margin-bottom: var(--spacing-sm);
  }

  .feature-card h3 {
    font-family: var(--font-display);
    font-size: var(--text-headline-medium);
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: var(--spacing-xs);
  }

  .feature-card p {
    font-family: var(--font-body);
    font-size: var(--text-body);
    color: var(--color-text);
    line-height: 1.6;
    margin: 0;
  }


  /* ================================
     TESTIMONIOS
     ================================ */

  .testimonials-section {
    background-color: var(--color-background);
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-md);
  }


  /* ================================
     CTA FINAL
     ================================ */

  .cta-section {
    background: linear-gradient(135deg, var(--color-primary-container), var(--color-surface));
    position: relative;
    overflow: hidden;
  }

  .cta-content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .cta-content h2 {
    font-family: var(--font-display);
    font-size: var(--text-headline-large);
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: var(--spacing-sm);
  }

  .cta-content p {
    font-family: var(--font-body);
    font-size: var(--text-body-large);
    color: var(--color-text);
    line-height: 1.6;
    margin-bottom: var(--spacing-lg);
  }

  .cta-buttons {
    display: flex;
    gap: var(--spacing-sm);
    justify-content: center;
    flex-wrap: wrap;
  }


  /* ================================
     RESPONSIVE - M칩vil
     ================================ */

  @media (max-width: 768px) {
    .cta-buttons {
      flex-direction: column;
      width: 100%;
    }

